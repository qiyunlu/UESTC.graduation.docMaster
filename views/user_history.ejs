<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

<script>
	function showAuthen(str) {
		alert("请确保处于安全环境，切勿泄露验证信息！");
		alert("验证码："+str);
	}
</script>

</head>
<body>

<div class="navbar navbar-inverse set-radius-zero" >
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <h2 align="middle">Welcome <%= global.gUser.name %></h2>
        </div>
        <div class="right-div">
            <a href="/logout" class="btn btn-danger pull-right">LOG ME OUT</a>
        </div>
    </div>
</div>

<!-- LOGO HEADER END-->
<section class="menu-section">
    <div class="container">
        <div class="row ">
            <div class="col-md-12">
                <div class="navbar-collapse collapse ">
                    <ul id="menu-top" class="nav navbar-nav navbar-right">
                        
                      <li><a href="user_download">文档列表</a></li>
                      <li><a href="user_history" class="menu-top-active">下载历史</a></li>
                      <li><a href="user_info">我的账号</a></li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MENU SECTION END-->
<div class="content-wrapper">
  <div class="container">
    <div class="row pad-botm">
        <div class="col-md-12">
            <h4 class="header-line">下载历史</h4>
        </div>
    
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="panel panel-success">
    <div class="panel-heading">
      您曾经下载过的文件：
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th width="50px">#</th>
              <th width="150px">文件名称</th>
              <th width="150px">作者</th>
              <th width="400px">下载时间</th>
              <th width="150px">网络MAC</th>
              <th>*验证码</th>
            </tr>
          </thead>
          <tbody>
          <%
          for (var i = 0; typeof(global.gDownloadHistory[i]) != "undefined"; i++) {
          %>
            <tr>
              <td><%= i+1%></td>
              <td><%= global.gDownloadHistory[i].hName%></td>
              <td><%= global.gDownloadHistory[i].hAuthor%></td>
              <td><%= global.gDownloadHistory[i].hDate%></td>
              <td><%= global.gDownloadHistory[i].netMac%></td>
              <td><input type="button" value="点击查看" onclick="showAuthen('<%=global.gDownloadHistory[i].publicKey%>');" /></td>
            </tr>
          <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- JAVASCRIPT FILES PLACED AT THE BOTTOM TO REDUCE THE LOADING TIME  -->
<!-- CORE JQUERY  -->
<script src="user_assets/js/jquery-1.10.2.js"></script>
