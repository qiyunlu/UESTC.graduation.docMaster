<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

</head>
<body>

<div class="navbar navbar-inverse set-radius-zero" >
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <h2 align="middle">Welcome <%= global.gUser.name %></h2>
        </div>
        <div class="right-div">
            <a href="/logout" class="btn btn-danger pull-right">LOG ME OUT</a>
        </div>
    </div>
</div>

<!-- LOGO HEADER END-->
<section class="menu-section">
    <div class="container">
        <div class="row ">
            <div class="col-md-12">
                <div class="navbar-collapse collapse ">
                    <ul id="menu-top" class="nav navbar-nav navbar-right">
                        
                      <li><a href="user_download" class="menu-top-active">文档列表</a></li>
                      <li><a href="user_history">下载历史</a></li>
                      <li><a href="user_info">我的账号</a></li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MENU SECTION END-->
<div class="content-wrapper">
  <div class="container">
    <div class="row pad-botm">
        <div class="col-md-12">
            <h4 class="header-line">文档列表</h4>
        </div>
    
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="panel panel-success">
    <div class="panel-heading">
      您所能浏览和下载的文件：
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th width="50px">#</th>
              <th width="150px">文件名称</th>
              <th width="500px">内容简介</th>
              <th width="150px">作者</th>
              <th width="200px">上传时间</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <%
          for (var i = 0; typeof(global.gDocument[i]) != "undefined"; i++) {
          %>
            <form method="post" action="/exactInfo">
            <input type="hidden" value="<%=global.gDocument[i].docId%>" name="docId">
            <tr>
              <td><%= i+1%></td>
              <td><%= global.gDocument[i].docName%></td>
              <td><%= global.gDocument[i].docContain%></td>
              <td><%= global.gDocument[i].docOwner%></td>
              <td><%= global.gDocument[i].docDate%></td>
              <td><input type="submit" value="点击查看详情" /></td>
            </tr>
            </form>
          <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- JAVASCRIPT FILES PLACED AT THE BOTTOM TO REDUCE THE LOADING TIME  -->
<!-- CORE JQUERY  -->
<script src="user_assets/js/jquery-1.10.2.js"></script>
<!-- BOOTSTRAP SCRIPTS  -->
<script src="user_assets/js/bootstrap.js"></script>
<!-- CUSTOM SCRIPTS  -->
<script src="user_assets/js/custom.js"></script>

</body>
</html>
