<title>User Page</title>
<!-- BOOTSTRAP CORE STYLE  -->
<link href="user_assets/css/bootstrap.css" rel="stylesheet" />
<!-- FONT AWESOME STYLE  -->
<link href="user_assets/css/font-awesome.css" rel="stylesheet" />
<!-- CUSTOM STYLE  -->
<link href="user_assets/css/style.css" rel="stylesheet" />
<!-- GOOGLE FONT -->
<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

</head>
<body>

<div class="navbar navbar-inverse set-radius-zero" >
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <h2 align="middle">Welcome <%= global.gUser.name %></h2>
        </div>
        <div class="right-div">
            <a href="/logout" class="btn btn-danger pull-right">LOG ME OUT</a>
        </div>
    </div>
</div>

<!-- LOGO HEADER END-->
<section class="menu-section">
    <div class="container">
        <div class="row ">
            <div class="col-md-12">
                <div class="navbar-collapse collapse ">
                    <ul id="menu-top" class="nav navbar-nav navbar-right">
                        
                      <li><a href="user_download">文档列表</a></li>
                      <li><a href="user_history">下载历史</a></li>
                      <li><a href="user_info" class="menu-top-active">我的账号</a></li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MENU SECTION END-->
<div class="content-wrapper">
  <div class="container">
    <div class="row pad-botm">
        <div class="col-md-12">
            <h4 class="header-line">用户信息</h4>
        </div>
    
<div class="row">
	<div class="col-md-12">
		<div class="jumbotron">
			<h1><%= global.gUser.name %></h1>
			<div>&nbsp;</div>
			<pre><h4><%= global.gUser.sign %></h4></pre>
		</div>
		<div class="panel-body">
			<div class="panel-group" id="accordion">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" class="collapsed">点击修改签名</a>
						</h4>
					</div>
					<div id="collapseOne" class="panel-collapse collapse" style="height: 0px;">
						<div class="panel-body">
							<form role="form" name="form1" method="post" action="/changeSign">
								<div class="form-group">
									<textarea class="form-control" rows="3" name="sign"><%= global.gUser.sign %></textarea>
								</div>
								<input type="submit" class="btn btn-info" value="修改" />
							</form>
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" class="collapsed">点击修改密码</a>
						</h4>
					</div>
					<div id="collapseTwo" class="panel-collapse collapse" style="height: auto;">
						<div class="panel-body">
							<form role="form" name="form2" method="post" action="/changePassword">
								<div class="form-group">
									<label>输入旧密码</label>
									<input class="form-control" type="text" name="oldpass" />
								</div>
								<div class="form-group">
									<label>输入新密码</label>
									<input class="form-control" type="text" name="newpass" />
								</div>
								<input type="submit" class="btn btn-info" value="修改" />
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- JAVASCRIPT FILES PLACED AT THE BOTTOM TO REDUCE THE LOADING TIME  -->
<!-- CORE JQUERY  -->
<script src="user_assets/js/jquery-1.10.2.js"></script>
<!-- BOOTSTRAP SCRIPTS  -->
<script src="user_assets/js/bootstrap.js"></script>
<!-- CUSTOM SCRIPTS  -->
<script src="user_assets/js/custom.js"></script>

</body>
</html>
